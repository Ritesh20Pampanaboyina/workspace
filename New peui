    <script type="text/javascript">
        function selectAllPrograms(source) {
            const options = document.getElementById('<%= ddlProgramIds.ClientID %>').options;
            for (let i = 0; i < options.length; i++) {
                options[i].selected = source.checked;
            }
        }
    </script>
