        function selectAllPrograms(selectAllCheckbox) {
            var selectElement = document.getElementById('<%= ddlProgramIds.ClientID %>');
            for (var i = 0; i < selectElement.options.length; i++) {
                selectElement.options[i].selected = selectAllCheckbox.checked;
            }
        }
    </script>
