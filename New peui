    <script type="text/javascript">
        function selectAllPrograms(selectAll) {
            var checkboxes = document.getElementsByClassName('program-checkbox');
            for (var i = 0; i < checkboxes.length; i++) {
                checkboxes[i].checked = selectAll.checked;
            }
        }
    </script>
