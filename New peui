    <script type="text/javascript">
        // JavaScript function to select/deselect all program IDs
        function selectAllPrograms(checkbox) {
            var listbox = document.getElementById('<%= ddlProgramIds.ClientID %>');
            for (var i = 0; i < listbox.options.length; i++) {
                listbox.options[i].selected = checkbox.checked;
            }
        }
    </script>
