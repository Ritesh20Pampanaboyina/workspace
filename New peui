    <script type="text/javascript">
        function selectAllPrograms(selectAll) {
            var programList = document.getElementById('<%= ddlProgramIds.ClientID %>');
            for (var i = 0; i < programList.options.length; i++) {
                programList.options[i].selected = selectAll.checked;
            }
        }
    </script>
